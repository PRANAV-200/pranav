import requests  
  
def get_weather_data(api_key, city_id):  
   api_url = "https://samples.openweathermap.org/data/2.5/forecast/hourly?q=London,us&appid=b6907d289e10d714a6e88b30761fae22"
    params = {  
        "id": city_id,  
        "units": "metric",  
        "appid": api_key  
        }
    
    response = requests.get(api_url, params=params)  
    data = response.json()  
    return data  

